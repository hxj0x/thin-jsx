{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "@hxj0x/thin-jsx",
    "paths": {
      "@hxj0x/thin-jsx/*": ["../../packages/core/src/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "noImplicitAny": false /* 后面再删掉 */
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/core"
    }
  ]
}
